@using AstroPhotoGallery.Common.Resources
@using AstroPhotoGallery.Common.Resources.Admin
@model AstroPhotoGallery.Web.Models.Category.DeleteCategoryViewModel
@{
    var heading = CategoryResources.titleDelete;
    ViewBag.Title = heading;
}

<div class="container">
    <div class="well">
        <h2>@heading</h2>
        <br/>
        <h3 style="color: #e74c3c; text-align: center">
            @CategoryResources.warningDeleteQuestion
            <br/>
            <br/>
            @CategoryResources.warningDeleteMessage
        </h3>
        <br />
        @using (Html.BeginForm("Delete", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink(CommonResources.btnCancel, "Index", "Category", new { @class = "btn btn-default" })
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>
