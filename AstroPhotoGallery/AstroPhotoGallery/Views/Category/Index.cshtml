@model PagedList.IPagedList<AstroPhotoGallery.Models.Category>
@using PagedList.Mvc;
@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2>All Categories - @Html.ActionLink("Create new category", "Create", "Category", null, new { @class = "btn btn-primary" })</h2>
        <div class="row">

            @using (Html.BeginForm())
            {
                <p>
                    <div class="form-group">
                        @Html.Label("Find Category by name: ", new { @class = "control-label col-sm-4" })
                        <div class="col-sm-4">
                            @Html.TextBox("SearchString", null, new { @class = "form-control" })
                        </div>
                    </div>
                 
                    <input type="submit" value="Search" class="btn btn-default" />
                </p>
            }

            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>
                            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.Name })
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Category", new { @id = category.Id }, new { @class = "btn btn-success btn-md" })
                                @Html.ActionLink("Delete", "Delete", "Category", new { @id = category.Id }, new { @class = "btn btn-warning btn-md" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        </div>
    </div>
</div>
