@model List<AstroPhotoGallery.Models.Category>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2>All Categories - @Html.ActionLink("Create new category", "Create", "Category", null, new { @class = "btn btn-primary" })</h2>
        <div class="row">
            
            @using (Html.BeginForm())
            {
                <p>
                    Find Category by name: @Html.TextBox("SearchString")
                    <input type="submit" value="Search" />
                </p>
            }

            <table class="table table-striped table-hover col-sm-12">
                <thead>
                <tr>
                    <th>#</th>
                    <th>
                        @Html.ActionLink("Name", "Index", new {sortOrder = ViewBag.Name})
                    </th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Category", new {@id = category.Id}, new {@class = "btn btn-success btn-md"})
                            @Html.ActionLink("Delete", "Delete", "Category", new {@id = category.Id}, new {@class = "btn btn-warning btn-md"})
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

