@model AstroPhotoGallery.Models.Category

@{
    ViewBag.Title = "Create a category";
}

<div class="container">
    <div class="well">
        <h2>@ViewBag.Title</h2>
        <hr/>
        @using (@Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group span=8 offset=2">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <input type="submit" value="Create" class="btn btn-success" />
                    @Html.ActionLink("Cancel", "Index", "Category", new {@class = "btn btn-default"})
                </div>
            </div>
        }
    </div>
</div>

