@model AstroPhotoGallery.Models.Picture

@{
    ViewBag.Title = "Delete picture";
}

<div class="container">
    <div class="well">
        <h2>@ViewBag.Title</h2>
        <h3 style="color: #e74c3c; text-align: center">Are you sure you want to delete the below picture?</h3>
        <br/>
        @using (Html.BeginForm("Delete", "Picture", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label col-sm-4">@* Empty label for centering the pic *@</label>
                <div class="col-sm-4">
                    <img src="@Url.Content(Model.ImagePath)" alt="Astro" width="280" height="200" class="img-responsive img-rounded">
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.PicTitle, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.PicTitle, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.PicDescription, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.PicDescription, new { @class = "form-control", @readonly = "readonly", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Category, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Category.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Tags, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBox("tagsString", (object)ViewBag.TagsString, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Details", "Picture", new { @id = Model.Id }, new { @class = "btn btn-default" })
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>
