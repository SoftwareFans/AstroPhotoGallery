@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error 404";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <br />
    <div class="row">
        <div class="col-sm-12">
            <div>
                <div class="well text-center" style="font-size: 35px; color: #e74c3c; word-wrap: break-word;">
                    <p>The URL address that has been entered does not exist. </p>
                    <p>Please go back to the home page or any other page from the site.</p>
                    @Html.ActionLink("Back to the home page", "Index", "Home", null, new {@class = "btn btn-default btn-lg"})
                </div>
            </div>
        </div>
    </div>
    <br/>
</div>


